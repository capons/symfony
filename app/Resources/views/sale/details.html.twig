


{% extends 'app.php.twig' %}

{% block widget %}




{% endblock %}

{% block body %}
    <div class="col-lg-12">

        <div style="margin: 0 auto;float: none" class="col-xs-6">
            {% for item in product %}
                <div class="col-xs-12">
                    <div class="col-xs-12">
                        <p style="text-align: center;color: #1a1a1a;font-size: 30px;font-weight: 800">Product description</p>
                    </div>
                    <div style="padding: 10px; background-color: cornflowerblue; color: ghostwhite;margin-bottom: 5px;border-right: 2px solid beige" class="col-xs-6">
                        {{ item.name }}
                    </div>
                    <div style="padding: 10px; background-color: cornflowerblue; color: ghostwhite;margin-bottom: 5px" class="col-xs-6">
                        {{ item.cat_name }}
                    </div>
                </div>


             {% endfor %}
        </div>
    </div>



{% endblock %}